<h3>Friends list</h3><br>

<% if user_signed_in? %>
  <table class="table table-striped table-hover">

    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email ID</th>
      <th>Mobile</th>
      <th>User ID</th>
      <th>Show Friend</th>
      <th>Edit Friend</th>
      <th>Delete Friend</th>
    </tr>
    </thead>

    <tbody>
  <!--    <div id="friends">-->
        <% @friends.each do |friend| %>
          <tr>
            <td>
              <%= friend.firstName %>
            </td>
            <td>
              <%= friend.lastName %>
            </td>
            <td>
              <%= friend.email %>
            </td>
            <td>
              <%= friend.mobile %>
            </td>
            <td>
              <%= friend.user_id %>
            </td>
            <td>
              <%= link_to "Show detail", friend, class: "btn btn-primary btn-sm" %>
            </td>

            <% if friend.user_id == current_user.id %>
              <td>
                <%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-secondary btn-sm" %>
              </td>
              <td>
                <%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
              </td>
            <% end %>
          </tr>
          <%#= render friend %>
        <% end %>
  <!--    </div>-->
    </tbody>
  </table>

  <br>
  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary"%>


<% else %>

  <h1>Hello World!</h1>
  This is my first Rails Webpage...

<% end %>

